<% provide(:title, 'Sign up') %>
<div class="center">
  <%= link_to image_tag("logo0.bmp", alt: "BestBay")%>
</div>
<div class = "row">
  <div class = "span6 offset3">
    <h1> Sign up </h1>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.text_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.text_field :password_confirmation %>

        <div><%= f.submit "Create my account",  class: "btn btn-primary"  %>
          <%= link_to "Back to auctions",root_path ,class: "btn btn-inverse" %> </div>
    <% end %>
  </div>
</div>


